<!DOCTYPE html>
<html lang="en">

<%- include("../partials/headproduct.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>

            <section class="buscador">
                <div class="contenedor-buscador">
                    <input class="input-buscador" type="text" value="Busca tu destino">
                </div>
                <div class="header-contenedor-bars">
                    <i class="fas fa-bars header-bars"></i>
                </div>
            </section>
            <main class="main-product">
                <section class="main-product-section">
                    <% let productsId=products.find( product=> product.id == idProduct) %>

                        <article class="destiny">

                            <div class="main-product-contenedor">
                                <div class="destiny-card-top">
                                    <h1 class="destiny-title">
                                        <%= productsId.name %>
                                    </h1>
                                    <img class="imgproduct" src="/img/<%= productsId.img %>" alt="">
                                </div>

                                <div class="product-card-body">
                                    <div class="efectivo">
                                        <h2 class="price"> $<%= productsId.price %>
                                        </h2>
                                        <p class="price-cuotas"> en 12x $ <%= (productsId.price/12).toFixed(2) %>
                                        </p>
                                        <a href="">
                                            <p>ver los medios de pago</p>
                                        </a>
                                    </div>
                                    <div class="contenedor-select">
                                        <label for="">Cantidad:</label>
                                        <select name="select">
                                            <option value="value1" selected>1</option>
                                            <option value="value2">2</option>
                                            <option value="value3">3</option>
                                        </select>
                                    </div>
                                    <div class="contenedor-btn">
                                        <button class="article-btn btn-comprar" onClick="redirect()">Comprar
                                            Ahora</button>
                                        <button class="article-btn btn-agregar" onClick="redirect()">Agregar al
                                            carrito</button>
                                    </div>
                                    <h2 class="detail">Lo que tenes que saber:</h2>
                                    <ul class="producto-info">
                                        <li>
                                            <i class="fas fa-bus"></i>
                                            <p>Bus de turismo Mix (opcional butaca cama $3.000).</p>
                                        </li>
                                        <li>
                                            <i class="fas fa-calendar"></i>
                                            <p>03 Noches.</p>
                                        </li>
                                        <li>
                                            <i class="fas fa-bed"></i>
                                            <p>Alojamiento.</p>
                                        </li>
                                        <li>
                                            <i class="fa fa-utensils"></i>
                                            <p>Régimen de Comidas: <%= productsId.meals %>.</p>
                                        </li>
                                        <li>
                                            <i class="fa fa-walking"></i>
                                            <p>Excursiones Incluidas: <%= productsId.extras %>
                                            </p>
                                        </li>
                                        <li>
                                            <i class="fa fa-user"></i>
                                            <p>Coordinador Permanente. <%= productsId.guide %>
                                            </p>
                                        </li>
                                        <li>
                                            <i class="fa fa-users"></i>
                                            <p>Guías Locales.</p>
                                        </li>
                                        <li>
                                            <i class="fas fa-shield-virus"></i>
                                            <p>Seguro COVID-19. <%= productsId.insure %>
                                            </p>
                                        </li>
                                    </ul>
                                    <p class="destiny-description">Programa de salidas propias en bus para conocer
                                        ESTANCIA LA
                                        Ernestina Ecoturismo. Salidas
                                        en <%= productsId.date %> .
                                    </p>

                                    <div class="p">
                                        <div class="producto-descripcion">
                                            <h2>Descripcion:</h2>
                                            <p class="producto-descrip">
                                                <%= productsId.detail %>
                                            </p>
