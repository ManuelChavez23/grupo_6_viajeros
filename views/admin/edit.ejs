<!DOCTYPE html>
<html lang="en">


<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/headerAdmi.ejs") %>
            <main>
                <section class="formulario-editar">
                    <form action="/edit/<%= idProduct %>/storage?_method=PUT" method="POST"
                        enctype="multipart/form-data">

                        <p>
                            <label for="name" class="colocar_nombre">Nombre Destino
                            </label>
                            <input  type="text" 
                                    name="name" id="newName" 
                                    value="<%= product.name %>" 
                                    placeholder=""
                                    class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"
                                >
                            <% if (locals.errors && errors.name) { %>
                                <div class="text-danger">
                                    <p>
                                        <%= errors.name.msg %>
                                    </p>
                                </div>
                                <% } %>
                        </p>
                        <p>
                            <label for="newDate">Nueva Fecha de Salida</label>
                            <input type="date" id="newDate" name="newDate"
                                value="<%= product.date ? product.date : ''; %>">
                        </p>
                        <p>
                            <label>Imagen actual</label>
                            <img width="30%" src="/img/<%= product.img %>" alt="foto"><br>
                            <label for="newImg">Nueva Imagen producto</label>
                            <input type="file" id="newImg" name="img" value="/img/<%=product.img %>">
                        </p>
                        <p>
                            <label for="category">Categoria</label>
                            <select name="category" id="category">
                                <option value="1" <%=product.destiny_category_id=="1" ? 'selected' : '' ; %>>Nacional
                                </option>
                                <option value="2" <%=product.destiny_category_id=="2" ? 'selected' : '' ;%>
                                    >Internacional</option>
                            </select>
                        </p>
                        <p>
                            <label for="status">Tipo de anuncio</label>
                            <select name="status" id="status">
                                <option value="1" <%=product.status_id=="1" ? 'selected' : '' ; %>>Destacado</option>
                                <option value="2" <%=product.status_id=="2" ? 'selected' : '' ; %>>Oferta</option>
                                <option value="3" <%=product.status_id=="3" ? 'selected' : '' ; %>>Simple</option>
                            </select>
                        </p>
                        <p>
                            <label for="group">Salida</label>
                            <select name="group" id="group">
                                <option value="1" <%=product.group_id=="1" ? 'selected' : '' ; %>>Individual</option>
                                <option value="2" <%=product.group_id=="2" ? 'selected' : '' ; %>>Grupal</option>
                            </select>
                        </p>
                        <p>
                            <label for="meals">Regimen Comidas</label>
                            <select id="meals" name="meals">
                                <option value="1" <%=product.meals_id=="1" ? 'selected' : '' ; %>>All inclusive</option>
                                <option value="2" <%=product.meals_id=="2" ? 'selected' : '' ; %>>Media Pensi贸n</option>
                                <option value="3" <%=product.meals_id=="3" ? 'selected' : '' ; %>>Pensi贸n Completa
                                </option>
                                <option value="4" <%=product.meals_id=="4" ? 'selected' : '' ; %>> No incluye Comida
                                </option>
                            </select>
                        </p>
                        <p>
                            <label for="transport">Traslado</label>
                            <select name="transport" id="transport">
                                <option value="1" <%=product.transport_id=="1" ? 'selected' : '' ; %>>Avi贸n</option>
                                <option value="2" <%=product.transport_id=="2" ? 'selected' : '' ; %>>Bus</option>
                                <option value="3" <%=product.transport_id=="3" ? 'selected' : '' ; %>>Barco</option>
                            </select>
                        </p>
                        <p>
                            <label for="newDetail" class="colocarmensaje">Descripci贸n
                                <span class="obligatorio">*</span>
                            </label>
                            <input 
                                type="text" 
                                class="textomensaje" 
                                id="newDetail"
                                name="newDetail"<%= product.detail ? product.detail : '' %>>
                        </p>
                        <p>
                            <label for="newPrice">Precio</label>
                            <input type="text" id="newPrice" name="newPrice" value="<%= product.price %>"
                                placeholder="$60.000">
                        </p>

                        <button type="submit" name="enviarformulario" id="enviar1">
                            <p class="enviar3">Subir</p>
                        </button>

                    </form>
                    </div>
                    </div>

            </main>

    </body>