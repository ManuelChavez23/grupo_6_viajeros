<!DOCTYPE html>
<html lang="en">


<%- include("../partials/headProduct.ejs") %>

    <body>
        <%- include("../partials/headerAdmi.ejs") %>

            <main class="maincontact3">
                <div class="contact_form3">

                    <div class="formulario3">
                        <h1 class="formulario3">Agregar Destinos</h1>

                        <form action="/create" method="post" enctype="multipart/form-data">


                            <p>
                                <label for="name" class="colocar_nombre">Nombre Destino
                                </label>
                                <input type="text" name="name" id="nombre1" required="obligatorio" placeholder="">

                            </p>

                            <p>
                                <label for="date">Fecha de Salida</label>
                                <input type="date" id="date" name="date">
                            </p>
                            <p>
                                <label for="insure">Seguro COVID-19</label>
                                <input type="checkbox" id="insure" name="insure" value="true">
                            </p>
                            <p>
                                <label for="guide">Coordinador Permanente</label>
                                <input type="checkbox" name="guide" id="guide" value="true">
                            </p>
                            <p>
                                <label for="extras" class="colocar_nombre">Excursiones Incluidas
                                </label>
                                <input type="text" name="extras" id="extras" required="obligatorio"
                                    placeholder="Exrtras del paquete - de ser valido">
                            </p>

                            <p>
                                <label for="img">Imagen producto</label>
                                <input type="file" id="img" accept="jpg" name="img">

                            </p>
                            <p>
                                <label for="group">Salida</label>
                                <select name="group" id="group">
                                    <option value="grupo">Grupal</option>
                                    <option value="individual">Individual</option>
                                </select>
                            </p>
                            <p>
                                <label for="category">Viaje</label>
                                <select name="category" id="category">
                                    <option value="Internacional">Exterior</option>
                                    <option value="Nacional">Nacional</option>
                                </select>
                            </p>
                            <p>
                                <label for="meals">Regimen Comidas</label>
                                <select id="meals" name="meals">
                                    <option value="all">All inclusive</option>
                                    <option value="media">Media Pensión</option>
                                </select>
                            </p>
                            <p>
                                <label>Tipo de anuncio</label>
                                <select id="status" name="status">
                                    <option value="destacado">destacado</option>
                                    <option value="oferta">oferta</option>
                                </select>
                            </p>
                            <p>
                                <label for="transport">Traslado</label>
                                <select name="transport" id="transport">
                                    <option value="bus">Bus</option>
                                    <option value="avion">Avión</option>
                                </select>
                            </p>

                            <p>
                                <label for="detail" class="colocarmensaje">Descripción
                                    <span class="obligatorio">*</span>
                                </label>
                                <textarea class="textomensaje" name="detail" id="detail"
                                    required="obligatorio"></textarea>
                            </p>
                            <p>
                                <label for="price">Precio</label>
                                <input type="text" id="price" name="price" value="" placeholder="$60.000">
                            </p>



                            <button type="submit" name="enviarformulario" id="enviar1">
                                <p class="enviar3">Subir</p>
                            </button>


                        </form>
                    </div>
                </div>
            </main>
            <script> hamburger = document.querySelector(".hamburger");
                hamburger.addEventListener("click", function () {
                    document.querySelector("body").classList.toggle("active");
                })</script>
    </body>

</html>