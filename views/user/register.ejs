            <section class="buscador">
                <div class="contenedor-buscador">
                    <input class="input-buscador" type="text" value="Busca tu destino">
                </div>
                <div class="header-contenedor-bars">
                    <i class="fas fa-bars header-bars"></i>
                </div>
                <!-- <img class="imgpbanner" src="img/banner2.png" alt=""> -->
