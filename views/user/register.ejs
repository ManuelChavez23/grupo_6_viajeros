                    <input type="email" name="re-email" placeholder="Repetir email">
                    <label class="register-label" for="password">Contraseña</label>
                    <input type="password" name="password" placeholder="Contraseña">
                    <label class="register-label" for="re-password">Repetir contraseña</label>
                    <input type="password" name="re-password" placeholder="Contraseña">
                    <label class="register-label" for="tel">Telefono de contacto</label>
                    <input type="tel" name="tel" placeholder="Telefono">
                    <div class="agree-div">
                        <label class="ad-agree-label" for="ad-agree">Deseo recibir ofertas y más información</label>
                        <input class="ad-agree-check" type="checkbox" name="ad-agree" id="ad-agree">
                        <label class="terms-agree-label" for="terms-agree">Aceptor los terminos y condiciones</label>
                        <input class="terms-agree-check" type="checkbox" name="terms-agree" id="terms-agree">
                    </div>
                    <button>Crear cuenta</button>
                </div>
